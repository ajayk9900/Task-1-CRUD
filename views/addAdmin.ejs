<%- include('header')%>

    <!-- Content wrapper -->
    <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <div  style="display: flex; justify-content: space-between;">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span>Add Admin</h4>
                <h4 class="fw-bold py-3 mb-4"><a href="/admin/view_admin">View Admin</a></h4>
            </div>
            <div class="row">

                <form action="/admin/insertAdminRecord" method="post" enctype="multipart/form-data">
                    <div class="card mb-4">
                        <div class="card-body demo-vertical-spacing demo-only-element">

                            <!-- First Name  -->
                            <label class="form-label">First Name</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text" id="basic-addon-search31"></span>
                                <input type="text" class="form-control" name="name" placeholder="Enter first name"
                                    aria-describedby="basic-addon-search31" />
                            </div>

                            <!-- Email address  -->
                            <label class="form-label" id="form-email">Email Address</label>
                            <div class="input-group input-group-merge">
                                <input type="text" class="form-control" name="email" id="form-email"
                                    placeholder="Enter email address" aria-label="Recipient's username"
                                    aria-describedby="basic-addon33" />
                                <span class="input-group-text" id="basic-addon33">@example.com</span>
                            </div>

                            <!-- Phone Number  -->
                            <label class="form-label" for="basic-default-number">Enter Phone Number</label>
                            <div class="input-group input-group-merge">
                                <input type="text" class="form-control" name="number" id="basic-default-number"
                                    placeholder="Enter mobile number" aria-describedby="basic-default-number" />
                                <span class="input-group-text cursor-pointer" id="basic-default-number"></span>
                            </div>

                            <!-- Image  -->
                            <label class="form-label">Upload File</label>
                            <div class="input-group">
                                <input type="file" name="adminImg" class="form-control" id="inputGroupFile02" />
                            </div>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Add Admin</button>
                    <button type="submit" class="btn btn-secondary">Clear</button>
                </form>